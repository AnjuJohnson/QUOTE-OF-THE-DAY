<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">normal</item>
        <item name="fab_shadowColor">@android:color/transparent</item>
        <item name="fab_colorNormal">#f6343f</item>
        <item name="fab_colorPressed">#ae0811</item>
        <item name="fab_colorRipple">#f15094</item>
    </style>

    <style name="layoutmatch">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="viewlayout" parent="@style/layoutmatch">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
